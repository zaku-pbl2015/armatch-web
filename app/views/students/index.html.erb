<h1>Listing offers</h1>
<table>
  <thead>
    <tr>
      <th>バイト名</th>
      <th>詳細</th>
      <th>企業</th>
      <th>期限</th>
      <th>バイトカテゴリ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer['title'] %></td>
        <td><%= offer['detail'] %></td>
        <td><%= offer['corporation'] %></td>
        <td><%= offer['limited_on'] %></td>
        <td><%= offer['category'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
